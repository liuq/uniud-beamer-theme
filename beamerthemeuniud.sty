		\vspace*{5mm}
	\fi%
	\ifx\insertdate\@empty%
	\else%
		{\usebeamerfont{date}\usebeamercolor[uniudBrownDark]{date}\insertdate\par}%
	\fi% 
	
	\vfill
	
	\ifx\insertauthor\@empty%
	\else%
		{\usebeamerfont{author}\usebeamercolor[uniudOrangeDark]{author}\flushleft{\nohyphens{\insertauthor}}\par}%
	\fi%
	\ifx\insertinstitut\@empty%
	\else%
		\vspace*{3mm}
		{\usebeamerfont{institute}\usebeamercolor[uniudBlueDark]{institute}\nohyphens{\insertinstitute}\par}%
	\fi% 
	\vspace*{5mm}
	\end{minipage}
}

